

<div class="my-login-page">
    <section class="h-100">
        <div class="container main-container h-100">
            <div class="row justify-content-center h-100">
                <div class="card-wrapper">
                    <div class="top-heading-main_div">
                        <div class="p-3 top-heading-sub_div">
                        </div>
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            {{!-- <h4 class="card-title text-decoration-underline" style="font-family: 'Avenir', sans-serif ;">Register</h4> --}}
                            <form action="/admin/add-teacher" style="font-family: 'Avenir', sans-serif ;" method="post" id="signupForm" class="signup-form">
                            {{#if MESSAGE }}
                        {{#if MESSAGE.status}}
                        <div class="alert alert-success" role="alert">
                            {{MESSAGE.message}}
                        </div>
                        {{else}}
                            <div class="alert alert-danger" role="alert">
                                {{MESSAGE.message}}
                            </div>
                        {{/if}}
                        {{/if}}
                                <div class="form-group">
                                    <input id="name" placeholder="Full Name" type="text" class="form-control" name="name">
                                </div>
                                <div class="form-group">
                                    <input id="email" placeholder="Email ID" type="email" class="form-control" name="email">
                                </div>
                                <div class="form-group">
                                    <input id="password" placeholder="Password" type="password" class="form-control" name="password" autocomplete="on">
                                </div>
                                <div class="form-group m-0" style="text-align: end;">
                                    <button style="background-color: white;border:1px solid  #d1d1d1;" type="submit" class="btn">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

