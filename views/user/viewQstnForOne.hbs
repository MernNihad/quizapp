<div class="question-body mt-5">

  {{#if MESSAGE}}
    {{#if MESSAGE.status}}
      <div class="alert alert-success" role="alert">
        {{MESSAGE.message}}
      </div>
    {{else}}
      <div class="alert alert-danger" role="alert">
        {{MESSAGE.message}}
      </div>
    {{/if}}
  {{/if}}
  <div class="">
    <p style="margin: 5px 15px;">Score 1</p>
  </div>
  {{#if MCQ}}
  <form action="/question_answer" method="post">
    <div class="question-body-firstDiv">
      <p>{{value.question}}</p>
    </div>
    <div class="question-body-secondDiv">
      {{!-- {{#if optionTwo}} --}}
        <div class="option-div-body">
          <div class="option-div">
            <input
              type="radio"
              name="__answer_select_user"
              value="{{value.option_A}}"
              id=""
            />
            <label for="">{{value.option_A}}</label>
          </div>
          <div class="option-div">
            <input
              type="radio"
              name="__answer_select_user"
              value="{{value.option_B}}"
              id=""
            />
            <label for="">{{value.option_B}} </label>
          </div>
        </div>
      {{!-- {{/if}} --}}
      <div class="option-div-body">
        <div class="option-div">
          <input
            type="radio"
            name="__answer_select_user"
            value="{{value.option_C}}"
            id=""
          />
          <label for="">{{value.option_C}} </label>
        </div>
        <div class="option-div">
          <input
            type="radio"
            name="__answer_select_user"
            value="{{value.option_D}}"
            id=""
          />
          <label for="">{{value.option_D}} </label>
        </div>
        <input type="text" hidden value="{{value._id}}" name="_id" />
      </div>
    </div>
    <div class="question-body-thirdDiv">
      <div class="submit-div">
        <input type="submit" style="    border: 1px solid #e7e6e6;
    padding: 5px 20px;" value="Submit" />
      </div>
    </div>
  </form>
  {{/if}}

